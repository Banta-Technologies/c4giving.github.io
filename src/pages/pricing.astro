---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import PricingCard from "@components/pricing.astro";

const pricing = [
  {
    name: "Purchase",
    price: "$275.00 - $375.00",
    popular: false,
    features: [
      "i5 and i3 Processors in Stock",
      "8 - 16 G Memory",
      "Refurbished ",
      "Available",
      "Updates and Support Available Long Term",
    ],
    button: {
      text: "Learn More",
      link: "/",
    },
  },
  {
    name: "Rental",
    price: "$300.00",
    popular: true,
    features: [
      "Intel Core i3-8145U @2.10 Ghz (4 threads 3.9Ghz)",
      "8 G memory",
      "Refurbished ",
      "Available to Rent",
      "Updates and Support",
    ],
    button: {
      text: "Learn More",
      link: "#",
    },
  },
  {
    name: "Enterprise",
    price: "Custom",
    popular: false,
    features: [
      "All Pro Features",
      "Unlimited Custom domains",
      "99.99% Uptime SLA",
      "SAML & SSO Integration",
      "Dedicated Account Manager",
      "24/7 Phone Support",
    ],
    button: {
      text: "Contact us",
      link: "/contact",
    },
  },
];
---

<Layout title="Pricing">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Pricing</Fragment>
      <Fragment slot="desc">
        Simple & Predictable pricing. No Surprises.
      </Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-screen-lg mt-12">
      {pricing.map((item) => <PricingCard plan={item} />)}
    </div>
  </Container>
</Layout>
